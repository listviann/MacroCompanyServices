@model ProductType

@{
    string strTitle = "Edit the information about product type";
    ViewBag.Title = strTitle;
}

<div>
    <h3>@strTitle</h3>
    <form asp-area="Admin" asp-controller="ProductTypeItems" asp-action="Edit" method="post">
        <input asp-for="Id" type="hidden" />

        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="Name"></label><br />
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <input type="submit" value="Save" />
        </div>
    </form>
</div>