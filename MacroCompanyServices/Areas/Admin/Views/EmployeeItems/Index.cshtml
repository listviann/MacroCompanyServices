@model IQueryable<Employee>
@{
    string strTitle = "Employees";
    ViewBag.Title = strTitle;
}

<div>
    <h1>@strTitle</h1>
    <div>
        <div>
            <a asp-area="Admin" asp-controller="EmployeesItems" asp-action="Edit" asp-route-id="">Add a new employee</a>
        </div>
        <table>
            <tr>
                <th>Id</th><th>Name</th><th>Email</th><th>Phone number</th><th>Salary</th><th>Birth date</th><th>Position</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Salary</td>
                    <td>@item.BirthDate</td>
                    <td>@item.Position</td>
                    <td>
                        <a asp-area="Admin" asp-controller="EmployeesItems" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <form asp-area="Admin" asp-controller="EmployeesItems" asp-action="Delete" asp-route-id="@item.Id">
                            <input type="submit" value="Delete">
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
